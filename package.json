{
  "name": "tools",
  "version": "1.0.0",
  "description": "This repository contains scripts I made to make my life easier when working.",
  "main": "check_min_node_version.js",
  "scripts": {
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "build": "tsc",
    "generate": "npm run build && node build/generator/generator.module.js",
    "install": "npm run generate && node build/installer/installer.module.js -f ../generator/scripts.json",
    "install-d": "npm run generate && node build/installer/installer.module.js -f ../generator/scripts.json --dangerous",
    "install-d-mac": "npm run generate && node build/installer/installer.module.js -f ../generator/scripts.json --dangerous mac",
    "install-d-win": "npm run generate && node build/installer/installer.module.js -f ../generator/scripts.json --dangerous win"
  },
  "private": true,
  "browser": {
    "child_process": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/straightcurve/work-tools.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/straightcurve/work-tools/issues"
  },
  "homepage": "https://github.com/straightcurve/work-tools#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.5",
    "pkg": "^4.4.9"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.28",
    "chai": "^4.3.0",
    "mocha": "^8.3.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
